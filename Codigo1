//Programa: Sistema de trava eletrica com RFID
#include <SPI.h>
#include <MFRC522.h>
 
#define SS_PIN 10
#define RST_PIN 9
MFRC522 mfrc522(SS_PIN, RST_PIN);   // Create MFRC522 instance.
boolean Aberto = false;

void setup() 
{
//  Serial.begin(9600);   // Inicia a serial
  SPI.begin();      // Inicia  SPI bus
  mfrc522.PCD_Init();   // Inicia MFRC522
 // Serial.println("Aproxime o seu cartao do leitor...");
 // Serial.println();
  pinMode(6, OUTPUT);
  pinMode(7, OUTPUT);
}

void loop() 
{
  // Procura por cartao RFID
  if ( ! mfrc522.PICC_IsNewCardPresent()) 
  {
    return;
  }
  // Seleciona o cartao RFID
  if ( ! mfrc522.PICC_ReadCardSerial()) 
  {
    return;
  }
  //Mostra UID na serial
 // Serial.print("UID da tag :");
  String conteudo= "";
  byte letra;
  for (byte i = 0; i < mfrc522.uid.size; i++) 
  {
  //   Serial.print(mfrc522.uid.uidByte[i] < 0x10 ? " 0" : " ");
  //   Serial.print(mfrc522.uid.uidByte[i], HEX);
     conteudo.concat(String(mfrc522.uid.uidByte[i] < 0x10 ? " 0" : " "));
     conteudo.concat(String(mfrc522.uid.uidByte[i], HEX));
  }
  //Serial.println();
 // Serial.print("Mensagem : ");
  conteudo.toUpperCase();

  if ((conteudo.substring(1) == "94 C9 47 1A") or 
  (conteudo.substring(1) == "44 AE 90 3F") or 
  (conteudo.substring(1) == "7E A8 D5 E5")) //UID 1 - Cartao
  {
    if (Aberto) {
   //   Serial.print("FECHANDO");
      digitalWrite(6, LOW);
      digitalWrite(7, LOW);      
      Aberto = false;
    }else{
  //   Serial.print("ABRINDO");
      digitalWrite(6, HIGH);
      digitalWrite(7, HIGH);
      delay(3000);
      digitalWrite(6, LOW);
      Aberto = true;
    }
    delay(2000);
  }  
  
}
